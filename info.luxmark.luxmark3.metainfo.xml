<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>info.luxmark.luxmark3</id>
  <metadata_license>Apache-2.0</metadata_license>
  <project_license>GPL-3.0-or-later-AND-Apache-2.0</project_license>
  <developer_name>LuxCoreRender and LuxMark contributors</developer_name>
  <name>LuxMark 3</name>
  <summary>OpenCL benchmark</summary>

  <description>
    <p>
      LuxMark is an OpenCL benchmark tool based on LuxCoreRender.
    </p>
  </description>

  <launchable type="desktop-id">info.luxmark.luxmark3.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image type="source">https://wiki.luxcorerender.org/images/3/3a/Luxmark01.jpg</image>
    </screenshot>
    <screenshot type="default">
      <image type="source">https://wiki.luxcorerender.org/images/f/f1/Luxmark02.jpg</image>
    </screenshot>
    <screenshot type="default">
      <image type="source">https://wiki.luxcorerender.org/images/9/97/Luxmark03.jpg</image>
    </screenshot>
  </screenshots>

  <url type="homepage">http://www.luxmark.info</url>
  <url type="bugtracker">https://github.com/LuxCoreRender/LuxMark/issues</url>
  <url type="help">https://wiki.luxcorerender.org/LuxMark_v3</url>

  <releases>
    <release version="3.1" date="2017-12-13">
      <description>
        <p>
          It is based on LuxRender v1.5 render engine and features new “OpenCL Compiler Options” menu allowing the user to enable or disable single compiler options. The --ext-info option was also added.
        </p>
      </description>
      <url>https://wiki.luxcorerender.org/LuxMark_v3</url>
    </release>
  </releases>

  <recommends>
    <memory>3072</memory> <!-- 3GiB RAM -->
  </recommends>

  <requires>
    <control>pointing</control>
    <control>keyboard</control>
  </requires>

  <content_rating type="oars-1.1">
  </content_rating>

  <provides>
    <binary>luxmark</binary>
  </provides>
</component>
